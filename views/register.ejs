<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <section class="wrapper">
      <form class="form" method="POST" action="register">
        <h1>Register</h1>
        <%-messages("partials/message",locals)%>
        <div class="box">
          <label for="login">Login:</label>
          <input type="text" id="login" class="form-input" name="login" placeholder="Login" />
        </div>
        <div class="box">
          <label for="email">E-mail:</label>
          <input type="email" id="email" class="form-input" name="email" placeholder="E-mail" />
        </div>
        <div class="box">
          <label for="login">Password:</label>
          <input type="password" id="password" class="form-input" name="password" placeholder="Password" />
        </div>
        <button class="form-btn" id="register-btn">Register</button>
        <a href="login" class="hint"> Have account? Log In!</a>
      </form>
    </section>
    <%- include("./partials/footer.ejs") %> <%- include("./partials/theme.ejs") %>
  </body>
</html>
